<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.kler.myfirstapplication.MainActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@android:color/background_light"
    android:src="@drawable/pizza_photo" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:fontFamily="sans-serif"
    android:gravity="center_vertical|center_horizontal"
    android:text="Pizza Italiana"
    android:textColor="@android:color/primary_text_light"
    android:textSize="24sp"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:fontFamily="sans-serif"
    android:gravity="center_vertical"
    android:text="For over 10 years, we have been serving up the best pizza in Orlando! Try us out for yourself!!!"
    android:textColor="@android:color/secondary_text_light"
    android:textSize="16sp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:drawablePadding="4dp"
    android:drawableStart="@drawable/ic_local_pizza_black_24dp"
    android:fontFamily="sans-serif-medium"
    android:gravity="center_vertical"
    android:text="5551 South Orange Ave. Orlando, Florida 55506"
    android:textColor="@android:color/secondary_text_light"
    android:textSize="14sp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:drawablePadding="4dp"
    android:drawableStart="@drawable/ic_public_black_24dp"
    android:fontFamily="sans-serif-medium"
    android:gravity="center_vertical"
    android:text="pizza-italiana.com"
    android:textColor="@android:color/secondary_text_light"
    android:textSize="14sp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:drawablePadding="4dp"
    android:drawableStart="@drawable/ic_phone_black_24dp"
    android:fontFamily="sans-serif-medium"
    android:gravity="center_vertical"
    android:text="555-731-438-02"
    android:textColor="@android:color/secondary_text_light"
    android:textSize="14sp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:drawablePadding="4dp"
    android:drawableStart="@drawable/ic_email_black_24dp"
    android:fontFamily="sans-serif-medium"
    android:gravity="center_vertical"
    android:text="mail@pizza-italiana.com"
    android:textColor="@android:color/secondary_text_light"
    android:textSize="14sp" />
</LinearLayout>